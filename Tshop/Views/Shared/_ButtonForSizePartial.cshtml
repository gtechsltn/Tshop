    <div class="btn-group">
        <a asp-action="Edit" asp-controller="Size" class="btn btn-primary" asp-route-id="@Model">
            Edit
        </a>
        <a asp-action="Details" asp-controller="Size" class="btn btn-success" asp-route-id="@Model">
